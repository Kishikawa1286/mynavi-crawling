{
  "env": {
    "browser": true,
    "es2020": true
  },
  "extends": "xo",
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "extends": [
        "xo-typescript",
        "plugin:prettier/recommended",
        "prettier"
      ],
      "files": ["*.ts"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "capitalized-comments": "off",
    "no-irregular-whitespace": "off"
  }
}
